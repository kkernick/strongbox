#!/bin/sh

ROOT_POOL=$(xargs -n 1 -a "/proc/cmdline" | grep "zfs=" | cut -d "=" -f 2 | cut -d "/" -f 1)
if [ -z "${1}" ]; then
  POOL="${ROOT_POOL}"
else
  POOL="${1}"
fi

IMPORT="zpool import -N ${POOL}"

if [[ "${ROOT_POOL}" == "${POOL}" ]]; then
  ROOTS=$(xargs -n 1 -a "/etc/cmdline.d/root.conf" | grep "root=" | cut -d "=" -f 2)
  IFS=';'
  for device in $ROOTS; do
     IMPORT="${IMPORT} -d ${device}"
  done

elif [[ -f /etc/zfs/$POOL.cache ]]; then
  IMPORT="${IMPORT} -c /etc/zfs/$POOL.cache"
fi

echo "${IMPORT}"

eval $IMPORT
if [ $? -ne 0 ]; then
  echo "Import failed. Attempting force."
  IMPORT="${IMPORT} -f"
  for i in {1..5}; do
          eval $IMPORT
          if [ $? -eq 0 ]; then
                  break
          fi
          echo "Failed attempt $i of 5"
          sleep 1
  done
fi
