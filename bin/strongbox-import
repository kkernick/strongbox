#!/bin/sh

ROOT_POOL=$(xargs -n 1 -a "/proc/cmdline" | grep "zfs=" | cut -d "=" -f 2 | cut -d "/" -f 1)
if [ -z "${1}" ]; then
  POOL="${ROOT_POOL}"
else
  POOL="${1}"
fi

if [[ $(zpool status | grep $POOL) ]]; then
  exit 0
fi

IMPORT="zpool import -N ${POOL}"

if [[ "${ROOT_POOL}" == "${POOL}" ]]; then
  ROOT=$(xargs -n 1 -a "/proc/cmdline" | grep "root=" | cut -d "=" -f 2)
  IMPORT="${IMPORT} -d ${ROOT}"
elif [[ -f /etc/zfs/$POOL.cache ]]; then
  IMPORT="${IMPORT} -c /etc/zfs/$POOL.cache"
fi

echo "${IMPORT}"

eval $IMPORT
if [ $? -ne 0 ]; then
  echo "Import failed. Attempting force."
  IMPORT="${IMPORT} -f"
  for i in {1..5}; do
          eval $IMPORT
          if [ $? -eq 0 ]; then
                  break
          fi
          echo "Failed attempt $i of 5"
          sleep 1
  done
fi
